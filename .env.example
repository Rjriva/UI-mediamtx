# MediaMTX Configuration
# Enable the MediaMTX API
MEDIAMTX_API_ENABLED=yes

# MediaMTX API port (internal)
MEDIAMTX_API_PORT=9997

# SRT (Secure Reliable Transport) port
MEDIAMTX_SRT_PORT=10000

# RTSP (Real Time Streaming Protocol) port
MEDIAMTX_RTSP_PORT=8554

# HLS (HTTP Live Streaming) port (optional)
MEDIAMTX_HLS_PORT=8888

# WebRTC port (optional)
MEDIAMTX_WEBRTC_PORT=8889

# UI Configuration
# Port for the web UI
UI_PORT=3000

# Node environment (production or development)
NODE_ENV=production

# MediaMTX API URL for the UI to connect to
# Use 'http://mediamtx:9997' when running in Docker
# Use 'http://localhost:9997' when running locally
MEDIAMTX_API_URL=http://mediamtx:9997

# Security Configuration
# Admin username for MediaMTX (if authentication is enabled)
ADMIN_USER=admin

# Admin password for MediaMTX (CHANGE THIS!)
ADMIN_PASSWORD=changeme

# Optional: Enable authentication for all paths
# Uncomment to require authentication
# ENABLE_AUTH=true

# Optional: Read-only user credentials
# READ_USER=viewer
# READ_PASSWORD=viewpass

# Optional: Publisher credentials (for SRT/RTSP publishers)
# PUBLISH_USER=publisher
# PUBLISH_PASSWORD=publishpass

# Network Configuration
# External IP or domain name for accessing the services
# Leave empty for localhost access only
# EXTERNAL_HOST=your-domain.com

# Optional: Enable HTTPS (requires reverse proxy like nginx)
# ENABLE_HTTPS=false

# Logging Configuration
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Database Configuration (if your UI uses a database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mediamtx_ui
# DB_USER=dbuser
# DB_PASSWORD=dbpass
